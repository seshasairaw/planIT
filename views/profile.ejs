<form method="POST" action = "/profile"  class="form">
    <div style="font-family: 'Kaushan Script',cursive; margin-top: 25px;">
        <center>
            <h1>
                Your Profile<br>
            </h1>
        </center>
    </div>
    <div >
      <center>
      <img src="https://www.tutorsvalley.com/api/uploads/tutor/1574383712-1AB5217C-5A13-4888-A5A1-BE0BCADBC655.png" alt="" class="image" width="115px" height="115px">
    </center>
    </div>
      <div class="row row1">
          <div class="col col1 form-group">
            <center>
           <div>
            <%if(avai){%>
              <h1><%="Given username  already exists"%></h1>
              <% }%>  
           </div>  
            <h5>    
                  
                <label for="firstname" >Name:  <%=user.name%> </label>
            </h5>
          <input type="text" name="name" id='name' class="form-control" placeholder="enter if you want to edit" >
        </center>
            </div>
          </div>
          <div class="row row1">
            <div class="col col1">
              <center>
              <h5>          
                  <label for="phoneno." >PhoneNo: <%=user.phoneno%></label>
              </h5>
            <input type="tel" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" name="phoneno" id='phoneno' class="form-control"  placeholder="enter if you want to edit" >
          </center>
        </div>
          </div>
          <div class="row row1">
            <div class="col col1 form-group">
              <center>
              <h5>  
                          
                  <label for="username" >Username: <%=user.username%></label>
              </h5>
            <input type="text" name="username" id='username' class="form-control" placeholder="enter if you want to edit" >
          </center>
              </div>
            </div>

            <div style="margin-top: 30px;">
                <center>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a class="btn btn-info" href="/changepassword" >Change Password</a>
                </center>
            </div>
         
        </form>


        <div style="padding-top: 20px;">
          <hr>
          <footer id="footer" style="padding: 4%; text-align: center;">        
            <div class="row">
              <div class="col-lg-6 col-sm-6 footer-icons1 " >
                <img src="/images/mail.png" alt="">
                E-mail : planit@gmail.com |
              </div>
              <div class="col-lg-6 col-sm-6 footer-icons2" >| 
                <img src="/images/call.png" alt="">
                Phone : 8978254888
              </div>
            </div>      
          </footer>
          </div>
